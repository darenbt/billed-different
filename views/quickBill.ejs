<%- include('partials/header') -%>
<main class="container">
  <form>
    <div class="form-group">
      <div class="input-group mb-3">  
        <span class="input-group-text">Total Bill:</span>
        <input type="text" class="form-control" id="total" aria-label="Total Amount"placeholder="Enter bill total here. (Ex: 87.58)">
      </div>
    </div>
    <div class="form-group">
      <div class="input-group mb-3">  
        <span class="input-group-text">How Many Ways?</span>
        <input type="number" min="1" class="form-control" id="ways" name="ways" aria-label="How many ways">
      </div>
    </div>
    <div class="form-group">
      <div class="input-group mb-3">  
        <span class="input-group-text">Tip %:</span>
        <input type="text" class="form-control" id="tip" aria-label="Tip percentage to apply"placeholder="Enter tip percentage here. (Ex: 20)">
      </div>
    </div>
    <div class="d-grid gap-2">
      <button type="button" class="btn btn-success btn-lg" id="split">Split the Bill!</button>
    </div>
  </form>
  <div class="mt-5 text-center">
    <h1 id="populate"></h1>
  </div>
</main>
<script src="js/quickBill.js"></script>
<%- include('partials/footer') -%>